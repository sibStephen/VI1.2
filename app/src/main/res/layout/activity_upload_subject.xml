<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_subject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="college.root.vi12.UploadSubjectActivity">

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/spDept"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Choose department"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginTop="19dp"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Upload subjects !"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Choose Year"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spDept"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView8" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/spYear"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spYear">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/etSubj1Name"
               android:hint="Enter subject name "/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
               android:hint="Subject Code"
                android:ems="10"
                android:layout_marginLeft="190dp"
                android:layout_marginStart="180dp"
                android:id="@+id/etSubject1Code"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etSub2Name"
                android:layout_below="@id/etSubj1Name"
                android:hint="Enter subject name "/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Subject Code"
                android:ems="10"
                android:layout_below="@id/etSubject1Code"
                android:layout_marginLeft="190dp"
                android:layout_marginStart="180dp"
                android:id="@+id/etSubject2Code"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etSub3Name"
                android:layout_below="@id/etSub2Name"
                android:hint="Enter subject name "/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Subject Code"
                android:ems="10"
                android:layout_below="@id/etSubject2Code"
                android:layout_marginLeft="190dp"
                android:layout_marginStart="180dp"
                android:id="@+id/etSubject3Code"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etSub4Name"
                android:layout_below="@id/etSub3Name"
                android:hint="Enter subject name "/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Subject Code"
                android:ems="10"
                android:layout_below="@id/etSubject3Code"
                android:layout_marginLeft="190dp"
                android:layout_marginStart="180dp"
                android:id="@+id/etSubject4Code"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etSub5Name"
                android:layout_below="@id/etSub4Name"
                android:hint="Enter subject name "/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Subject Code"
                android:ems="10"
                android:layout_below="@id/etSubject4Code"
                android:layout_marginLeft="190dp"
                android:layout_marginStart="180dp"
                android:id="@+id/etSubject5Code"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSub5Name"
                android:text="Submit"
                android:id="@+id/btnSubmit"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"/>


        </RelativeLayout>



    </ScrollView>

    <TextView
        android:text="Choose Semester"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:id="@+id/textView9" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spSem"
        android:layout_below="@+id/spDept"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

</RelativeLayout>
