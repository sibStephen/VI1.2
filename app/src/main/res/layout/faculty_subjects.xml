<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/facultySubjName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="18dp"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="Subject" />

            <TextView
                android:id="@+id/tvfsubjyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text=" Year"

                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/facultySubjName"
                android:layout_marginStart="17dp"
                android:layout_alignBottom="@+id/tvfsubjdiv" />

            <TextView
                android:id="@+id/tvfsubjdiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="Division"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/button3"
                android:layout_alignBottom="@+id/button3"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/tvfsubjdiv"
                android:background="@color/blue_pressed"
                android:padding="4dp"
                android:text="Take Attendance"
                android:textColor="@color/white"
                android:id="@+id/button3" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
