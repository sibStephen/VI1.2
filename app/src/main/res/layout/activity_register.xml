<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="college.root.vi12.RegisterActivity">


    <TextView
        android:text="Register here "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnRegister"
        android:layout_alignStart="@+id/btnRegister" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Choose a username"
        android:id="@+id/etUser"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Enter your password"
        android:layout_marginTop="21dp"
        android:id="@+id/etPass"
        android:layout_below="@+id/etUser"
        android:layout_alignLeft="@+id/etUser"
        android:layout_alignStart="@+id/etUser" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Enter your email"
        android:layout_marginTop="16dp"
        android:id="@+id/etEmailReg"
        android:layout_below="@+id/etPass"
        android:layout_alignLeft="@+id/etPass"
        android:layout_alignStart="@+id/etPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Enter your branch"
        android:id="@+id/etBranch"
        android:layout_below="@+id/etEmailReg"
        android:layout_alignLeft="@+id/etEmailReg"
        android:layout_alignStart="@+id/etEmailReg"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Enter year"
        android:layout_marginTop="16dp"
        android:id="@+id/etYear"
        android:layout_below="@+id/etBranch"
        android:layout_alignLeft="@+id/etBranch"
        android:layout_alignStart="@+id/etBranch" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Enter GR number"
        android:layout_marginTop="30dp"
        android:id="@+id/etGrNumber"
        android:layout_below="@+id/etYear"
        android:layout_alignLeft="@+id/etYear"
        android:layout_alignStart="@+id/etYear" />




</RelativeLayout>
