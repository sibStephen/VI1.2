<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="50dp"
        tools:context="college.root.vi12.FragmentProfile1">

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facname_txt"
            android:textStyle="bold"
            android:layout_margin="4dp"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:background="@drawable/custo_et"
            android:layout_below="@+id/facname_txt"
            android:id="@+id/facetname" />

        <TextView
            android:text="Surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facsurname_txt"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:layout_below="@id/facetname"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:background="@drawable/custo_et"
            android:layout_below="@+id/facsurname_txt"
            android:id="@+id/facetsurname" />

        <TextView
            android:text="Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facyear_txt"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:layout_below="@id/facetsurname" />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facepYear"
            android:layout_margin="4dp"
            android:layout_below="@+id/facyear_txt">
        </Spinner>

        <TextView
            android:text="Division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facdiv_txt"
            android:layout_margin="4dp"
            android:textStyle="bold"
            android:layout_below="@id/facepYear" />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facspDiv"
            android:layout_margin="4dp"
            android:layout_below="@+id/facdiv_txt"></Spinner>
        <TextView
            android:text="Branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/facbranch_txt"
            android:layout_margin="4dp"
            android:layout_below="@id/facspDiv"

            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facspBranch"
            android:layout_margin="4dp"
            android:layout_below="@id/facbranch_txt"></Spinner>



        <TextView
            android:text="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facgender_txt"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:layout_below="@id/facspBranch"

            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_margin="4dp"
            android:layout_below="@+id/facgender_txt"
            android:id="@+id/facspgender" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:id="@+id/factv21"
            android:layout_below="@id/facspgender"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/factv21"
            android:layout_margin="4dp"
            android:id="@+id/facspSem"></Spinner>

        <Button
            android:text="save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facspSem"
            android:layout_marginTop="8dp"
            android:id="@+id/facsave"
            android:background="@color/blue_pressed"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</ScrollView>