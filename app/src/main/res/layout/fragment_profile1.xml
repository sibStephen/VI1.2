<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    tools:context="college.root.vi12.FragmentProfile1">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_txt"
        android:textStyle="bold"
        android:layout_margin="4dp"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:padding="4dp"
        android:layout_margin="2dp"
        android:background="@drawable/custo_et"
       android:layout_below="@+id/name_txt"
        android:id="@+id/etname" />

    <TextView
        android:text="Surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/surname_txt"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:layout_below="@id/etname"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:padding="4dp"
        android:layout_margin="2dp"
        android:background="@drawable/custo_et"
        android:layout_below="@+id/surname_txt"
        android:id="@+id/etsurname" />

    <TextView
        android:text="Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year_txt"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:layout_below="@id/etsurname" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/epYear"
        android:layout_margin="4dp"
        android:background="@color/greyColor"
        android:layout_below="@+id/year_txt">
    </Spinner>

    <TextView
        android:text="Division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/div_txt"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:layout_below="@id/epYear" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spDiv"
        android:layout_margin="4dp"
        android:layout_below="@+id/div_txt"></Spinner>
    <TextView
        android:text="Branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/branch_txt"
        android:layout_margin="4dp"
        android:layout_below="@id/spDiv"

        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spBranch"
        android:layout_margin="4dp"
        android:layout_below="@id/branch_txt"></Spinner>



    <TextView
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender_txt"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:layout_below="@id/spBranch"

        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_margin="4dp"
        android:layout_below="@+id/gender_txt"
        android:id="@+id/spgender" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:id="@+id/tv21"
        android:layout_below="@id/spgender"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv21"
        android:layout_margin="4dp"
        android:id="@+id/spSem"></Spinner>

    <Button
        android:text="save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spSem"
        android:layout_marginTop="8dp"
        android:id="@+id/save"
        android:background="@color/blue_pressed"
        android:textColor="@color/white"
        />

</RelativeLayout>

</ScrollView>