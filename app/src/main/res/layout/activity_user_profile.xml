<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:titleTextColor="@android:color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="editPicture"
                android:id="@+id/profilepic"
                android:foregroundGravity="fill"
                android:src="@drawable/profile"
                android:layout_below="@id/toolbar1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="MRUNAL"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_below="@id/profilepic"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/surname"
                android:text="JOSHI"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_toRightOf="@id/name"
                android:layout_below="@id/profilepic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/year"
                android:text="TE"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="31dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/div"
                android:text="A"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="90dp"
                android:layout_alignBaseline="@+id/year"
                android:layout_alignBottom="@+id/year"
                android:layout_toEndOf="@+id/year" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/branch"
                android:text="COMPUTER"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@id/year"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grno"
                android:text="U1410186"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@id/branch"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                tools:text="75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/name"
                android:id="@+id/tvAtten" />

            <TextView
                android:text="%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvAtten"
                android:layout_toEndOf="@+id/tvAtten"
                android:id="@+id/textView5"
                android:textSize="25dp"
                android:layout_toRightOf="@+id/tvAtten" />


        </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="55dp"
            android:fitsSystemWindows="true"
            app:menu="@menu/menu_drawer" />

    </android.support.v4.widget.DrawerLayout>


