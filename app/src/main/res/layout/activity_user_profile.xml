<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextColor="@android:color/white" />

            <RelativeLayout
                android:id="@+id/rlFirstPart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/toolbar1"
                >


                <ImageView
                    android:id="@+id/imgCoverPic"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/blue_normal"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:onClick="editPicture"
                android:src="@drawable/profile"
                />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imgCoverPic"
                    android:layout_marginStart="76dp"
                    android:textStyle="bold"
                    tools:text="TE" />

                <TextView
                    android:id="@+id/branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/imgCoverPic"
                    android:layout_marginEnd="80dp"
                    android:text="Computer"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilepic"
                    android:layout_centerHorizontal="true"
                    android:text="Shubham"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Purandare"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgCoverPic"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/year"
                    android:textStyle="bold"
                    tools:text="C" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlStFirstPart2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rlFirstPart"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/rlstInside1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000000">

                    </LinearLayout>


                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ongoing lecture"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvStLec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"

                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        tools:text="lecture" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#000000">
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStloc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="19dp"
                        android:textStyle="bold"
                        tools:text="Location" />


                    <TextView
                        android:id="@+id/tvStFaculty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView18"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@+id/tvSttime"
                        android:textStyle="bold"
                        tools:text="Faculty"/>

                    <TextView
                        android:id="@+id/tvSttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView18"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@+id/tvStLec"
                        android:textStyle="bold"
                        tools:text="time"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlInside2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/rlstInside1">


                    <TextView
                        android:id="@+id/tvStdayNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_toRightOf="@+id/textView19"
                        tools:text="TextView"/>

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next lecture"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvStLecnext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        tools:text="lecture" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#000000">
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStlocnext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="19dp"
                        android:textStyle="bold"
                        tools:text="Location" />
                    <TextView
                        android:id="@+id/tvStFacultynext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView19"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@+id/tvSttimenext"
                        android:textStyle="bold"
                        tools:text="Faculty"/>

                    <TextView
                        android:id="@+id/tvSttimenext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView19"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@+id/tvStLecnext"
                        android:textStyle="bold"
                        tools:text="time"/>

                </RelativeLayout>




            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="55dp"
            android:fitsSystemWindows="true"
            app:menu="@menu/menu_drawer" />

    </android.support.v4.widget.DrawerLayout>


