<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">




    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/activity_main2"
            android:layout_width="match_parent"
            android:layout_height="699dp"

            android:paddingTop="50dp"
            tools:context="com.viit.erpsys.Main2Activity">


            <TextView
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_txt"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="38dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:layout_below="@+id/address_txt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/et_address" />

            <TextView
                android:text="Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:id="@+id/country_txt"
                android:layout_below="@+id/et_address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:layout_below="@+id/country_txt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp"
                android:id="@+id/state_txt" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@+id/state_txt"
                android:id="@+id/etstate" />

            <TextView
                android:text="District"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etstate"
                android:layout_marginTop="13dp"
                android:id="@+id/district_txt" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etdistrict"
                android:layout_below="@+id/district_txt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etdistrict"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:id="@+id/city_txt" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@+id/city_txt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/city_in" />

            <TextView
                android:text="Landline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_in"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="18dp"
                android:id="@+id/landline_txt" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@+id/landline_txt"
                android:id="@+id/landline_in" />


            <TextView
                android:text="Pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pincode_txt"
                android:layout_below="@+id/landline_in"
                android:layout_alignRight="@+id/landline_txt"
                android:layout_alignEnd="@+id/landline_txt"
                android:layout_marginTop="26dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/pincode_in"
                android:layout_below="@+id/pincode_txt"
                android:layout_alignRight="@+id/city_in"
                android:layout_alignEnd="@+id/city_in"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp" />

            <TextView
                android:text="Area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pincode_in"
                android:layout_marginTop="12dp"
                android:id="@+id/area_txt"
                android:layout_alignLeft="@+id/pincode_txt"
                android:layout_alignStart="@+id/pincode_txt" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@+id/area_txt"
                android:layout_alignLeft="@+id/area_txt"
                android:layout_alignStart="@+id/area_txt"
                android:id="@+id/area_in" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area_in"
                android:background="@color/blue_pressed"
                android:textColor="@color/white"
                android:id="@+id/btnNation"
                android:text="Submit"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>


